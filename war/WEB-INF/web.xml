<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
	<display-name>Contabil</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<session-config>	
		<session-timeout>30</session-timeout>
	</session-config>
	<listener>
		<listener-class>com.performer.framework.server.IPPServiceContextListenerSofia</listener-class>
	</listener>
	<listener>
		<listener-class>org.apache.commons.fileupload.servlet.FileCleanerCleanup</listener-class>
	</listener>
	<servlet>
		<servlet-name>ipp</servlet-name>
		<servlet-class>com.performer.framework.server.IPPServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ipp</servlet-name>
		<url-pattern>/peframework/ipp</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>NoCacheFilter</filter-name>
		<filter-class>com.performer.framework.server.NoCacheFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>NoCacheFilter</filter-name>
		<servlet-name>NoCacheServlet</servlet-name>
	</filter-mapping>

	<!-- Index -->

	<servlet>
		<servlet-name>IndexHtmlServlet</servlet-name>
		<servlet-class>com.performer.framework.server.IndexHtmlServlet</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>title</param-name>
			<param-value>Contabil</param-value>
		</init-param>
		<init-param>
			<param-name>css</param-name>
			<param-value>index.css</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>IndexHtmlServlet</servlet-name>
		<url-pattern>/index.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IndexHtmlServlet</servlet-name>
		<url-pattern>/debug.html</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>tree</servlet-name>
		<servlet-class>com.performer.framework.server.IPPTreeProvider</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>tree</servlet-name>
		<url-pattern>/peframework/tree</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>writer</servlet-name>
		<servlet-class>com.performer.framework.server.OutputWriterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>writer</servlet-name>
		<url-pattern>/writer/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>writer</servlet-name>
		<url-pattern>/download/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>upload</servlet-name>
		<servlet-class>com.performer.framework.server.UploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>upload</servlet-name>
		<url-pattern>/upload/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>lib</servlet-name>
		<servlet-class>com.performer.framework.server.LibraryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>lib</servlet-name>
		<url-pattern>/resources/lib/lib3rd.css</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>lib</servlet-name>
		<url-pattern>/resources/lib/lib3rd.js</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>lib</servlet-name>
		<url-pattern>/peframework/*</url-pattern>
	</servlet-mapping>
</web-app>